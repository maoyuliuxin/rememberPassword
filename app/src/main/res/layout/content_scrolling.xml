<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_scrolling">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_tab_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5sp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_psd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5sp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5sp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_tag1_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5sp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_tag1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_tag2_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5sp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_tag2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_tag3_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5sp"/>

        <com.lin.rememberpassword.widget.InputItemView
            android:id="@+id/input_tag3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            />

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="#333"
            android:textSize="16sp"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
